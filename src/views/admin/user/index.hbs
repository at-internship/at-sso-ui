<div class="tab-content card" id="nav-tabContent">
    <div class="tab-pane fade show active" id="search-md" role="tabpanel" aria-labelledby="search-tab-md">
        <!-- Users Search -->
        <section class="card">
            <div class="card-body">
                <table style="width: 100%">
                    <tr>
                        <td style="text-align: left;">
                            <h4 class="title_section">Users Administration</h4>
                        </td>
                        <td style="text-align: right;">
                            <a class="btn btn-primary" href="/admin/user/add">&raquo; Add New User</a>
                        </td>
                    </tr>
                </table>
            </div>
        </section>

        <section class="card">
            <div class="card-body">
                <table id="usersTable" class="display responsive nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each users}}
                            <tr>
                                <td>{{id}}</th>
                                <td>{{name}}</td>
                                <td>{{firstName}}</td>
                                <td>{{lastName}}</td>
                                <td>{{email}}</td>
                                <td>{{status}}</td>
                                <td>
                                    <a href="/admin/user/edit/{{id}}"><i class="fas fa-edit"></i></a>
                                    <a href="/admin/user/delete/{{id}}"><i class="fas fa-trash" style="color:red"></i></a>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
                <script type="text/javascript">
                    $(document).ready(function () {
                        $('#usersTable').DataTable();
                    });
                </script>
            </div>
        </section>

        <!-- Users Search -->

    </div>
</div>